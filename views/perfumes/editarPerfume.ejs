<%- include('../partials/header.ejs') %>

<body>

    <div class="container">

        <%- include('../partials/menu.ejs') %>

        <div class="card">

            <div class="card-header">
                <h3>EDITAR PERFUMES</h3>

            </div>

            <div class="card-body">

                <form action="/editarPerfume" method="post">

                    <label for="nome_perfume"></label>
                    <input 
                    class="form-control" type="text" 
                    name="nome_perfume" id="nome_perfume"
                    value="<%= perfume.data.nome_perfume %>">

                    <input 
                    type="hidden" 
                    name="cod_perfume" 
                    value="<%= perfume.data.cod_perfume %>">

                    

                    <button class="btn btn-success mt-2">EDITAR</button>

                </form>

            </div>

        </div>

    </div>

</body>

<%- include('../partials/footer.ejs') %>

</html>