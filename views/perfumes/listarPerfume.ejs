<%- include('../partials/header.ejs') %>

    <%- include('../partials/menu.ejs') %>

        <div class="container mt-4">

            <div class="card">
                <div class="card-header">
                    LISTAGEM DE PERFUMES
                </div>
            </div>

            <% perfumes.data.forEach(perfume=>{
                %>

                <div class="card mt-2 p1">
                    <div class="card-body">
                        <h5>
                            <%= perfume.nome_perfume %>
                        </h5>
                        <p>Marca: <%= perfume.marca_perfume %> <br>
                                Valor: <%= perfume.preco_perfume %>
                        </p>
                    </div>

                    <div class="btn-group mr-2">
                        <a href="/editarPerfume/<%= perfume.cod_perfume %>" class="btn btn-success btn-sm mr-2 ml-2">EDITAR</a>
                        <a href="/deletarPerfume/<%= perfume.cod_perfume %>" class="btn btn-danger btn-sm mr-2">EXCLUIR</a>
                    </div>

                </div>
                <% }) %>

        </div>




        </body>

        <%- include('../partials/footer.ejs') %>

            </html>